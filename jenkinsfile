pipeline {
    agent any
    stages {

        stage('Build') {
            steps {
                echo 'Hi, Jenkins. Starting to build the App.'
            }
        }

        stage('Test') {
            steps {
                input('Do you want to proceed?')
            }
        }

        stage('Deploy') {
            parallel {
                stage('Deploy start') {
                    steps {
                        echo "Start the Deplyment.."
                    }
                }

                stage('Deploying now') {
                    agent {
                        docker {
                            reuseNode true
                            image 'nginx'
                        }
                    }
                    steps {
                        echo "Docker Created"
                    }
                }
            }
            stage('Prod') {
                steps {
                    echo "App is Deployed in Prod and It's Ready to use"
                }
            }
        }

    }
}